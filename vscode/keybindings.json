// keybindings.json - VSCode Keybindings Configuration File of Michael-Matta1 @ https://github.com/Michael-Matta1/dev-dotfiles

// zsh-edit-select configuration for VSCode Terminal

    // Ctrl+C sends \x1b[67;6u to terminal (like Kitty's \x1b[67;6u)
    {
        "key": "ctrl+c",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "\u001b[67;6u" },
        "when": "terminalFocus",
    },
    // Ctrl+Shift+C sends interrupt signal (like Kitty's \x03)
    {
        "key": "ctrl+shift+c",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "\u0003" },
        "when": "terminalFocus",
    },
    // Send Ctrl+Shift+Left arrow to terminal (for word selection in zsh)
    {
        "key": "ctrl+shift+left",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "\u001b[1;6D" },
        "when": "terminalFocus",
    },
    // Send Ctrl+Shift+Right arrow to terminal (for word selection in zsh)
    {
        "key": "ctrl+shift+right",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "\u001b[1;6C" },
        "when": "terminalFocus",
    },
    // Send Shift+Home to terminal (for select to line start in zsh)
    {
        "key": "shift+home",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "\u001b[1;2H" },
        "when": "terminalFocus",
    },
    // Send Shift+End to terminal (for select to line end in zsh)
    {
        "key": "shift+end",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "\u001b[1;2F" },
        "when": "terminalFocus",
    },
    // Ctrl+Z sends undo to terminal (override VS Code's default undo)
    {
        "key": "ctrl+z",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "\u001a" },
        "when": "terminalFocus",
    },
    // Ctrl+Shift+Z sends redo to terminal
    {
        "key": "ctrl+shift+z",
        "command": "workbench.action.terminal.sendSequence",
        "args": { "text": "\u001b[90;6u" },
        "when": "terminalFocus",
    },




// Browser-like tab navigation
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditor",
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditor",
    },
    // Disable default MRU behavior
    {
        "key": "ctrl+tab",
        "command": "-workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup",
    },
    {
        "key": "ctrl+shift+tab",
        "command": "-workbench.action.quickOpenLeastRecentlyUsedEditorInGroup",
    },
