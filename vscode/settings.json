// settings.json - VSCode Settings Configuration File of Michael-Matta1 @ https://github.com/Michael-Matta1/dev-dotfiles

{
    // ============================================================================
    // GENERAL SETTINGS
    // ============================================================================
    "telemetry.telemetryLevel": "off",
    "explorer.confirmDelete": false,
    "explorer.sortOrder": "type",
    "explorer.compactFolders": false,
    "explorer.autoReveal": true,

    // ============================================================================
    // WINDOW SETTINGS
    // ============================================================================
    "window.restoreWindows": "none",
    "window.newWindowDimensions": "maximized",

    // ============================================================================
    // WORKBENCH / THEMES / APPEARANCE
    // ============================================================================
    "workbench.colorTheme": "GitHub Dark Default",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.wrapTabs": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.tree.indent": 10,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.tree.expandMode": "singleClick",
    "workbench.list.smoothScrolling": true,
    "workbench.colorCustomizations": {
        "editorWhitespace.foreground": "#ababab",
    },

    // ============================================================================
    // EDITOR - GENERAL
    // ============================================================================
    "editor.largeFileOptimizations": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "editor.mouseWheelZoom": true,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.autoIndentOnPaste": true,
    "editor.cursorBlinking": "expand",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.stickyScroll.enabled": true,
    "editor.renderWhitespace": "selection",
    "editor.renderControlCharacters": true,
    "editor.renderLineHighlight": "all",
    "editor.semanticHighlighting.enabled": true,
    "editor.detectIndentation": true,
    "editor.glyphMargin": true,
    "editor.inlineSuggest.enabled": true,
    "editor.parameterHints.enabled": true,
    "editor.scrollBeyondLastLine": true,
    "editor.scrollBeyondLastColumn": 5,
    "editor.showUnused": true,
    "editor.showFoldingControls": "always",
    "editor.matchBrackets": "always",
    "editor.smartSelect.selectLeadingAndTrailingWhitespace": true,
    "editor.inlayHints.enabled": "on",
    "editor.lightbulb.enabled": "on",
    "editor.rulers": [],
    "editor.wordWrap": "off",
    "editor.linkedEditing": true,
    "editor.snippetSuggestions": "top",
    "editor.tabCompletion": "on",
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "explicit",
    },
    "editor.formatOnSaveMode": "file",
    "editor.find.seedSearchStringFromSelection": "always",
    "editor.emptySelectionClipboard": false,

    // Editor - Font
    "editor.fontFamily": "'MesloLGS NF','Cascadia Code','Droid Sans Mono', 'monospace'",
    "editor.fontWeight": "350",
    "editor.lineHeight": 20,

    // Editor - Indentation (Use 4 spaces globally)
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    // Editor - Brackets & Guides
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": true,
    "editor.guides.indentation": true,
    "editor.guides.highlightActiveIndentation": true,
    "editor.guides.highlightActiveBracketPair": true,

    // Editor - Minimap
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "mouseover",

    // Editor - Default Formatter
    "editor.defaultFormatter": "esbenp.prettier-vscode",

    // ============================================================================
    // BREADCRUMBS
    // ============================================================================
    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "on",
    "breadcrumbs.showFiles": true,
    "breadcrumbs.showFunctions": true,

    // ============================================================================
    // OUTLINE
    // ============================================================================
    "outline.icons": true,
    "outline.showClasses": true,
    "outline.showFunctions": true,
    "outline.showModules": true,

    // ============================================================================
    // FILES
    // ============================================================================
    "files.associations": {
        "*.sh": "shellscript",
    },
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    // ============================================================================
    // TERMINAL
    // ============================================================================
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.profiles.linux": {
        "zsh": {
            "path": "zsh",
            "args": ["-l"]
        }
    },
        "terminal.integrated.inheritEnv": true,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.copyOnSelection": false,
    "terminal.integrated.gpuAcceleration": "auto",
    "terminal.integrated.suggest.quickSuggestions": true,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.scrollback": 10000,
    "terminal.external.linuxExec": "kitty",

    // ============================================================================
    // GIT
    // ============================================================================
    "git.autofetch": true,
    "git.confirmSync": true,
    "git.enableSmartCommit": false,
    "git.openDiffOnClick": true,
    "git.pruneOnFetch": true,
    "git.untrackedChanges": "separate",
    "diffEditor.renderSideBySide": true,
    "scm.defaultViewMode": "tree",

    // ============================================================================
    // DEBUGGING
    // ============================================================================
    "debug.inlineValues": "auto",

    // ============================================================================
    // SEARCH
    // ============================================================================
    "search.smartCase": true,
    "search.collapseResults": "auto",

    // ============================================================================
    // NOTEBOOK / JUPYTER
    // ============================================================================
    "notebook.formatOnSave.enabled": true,
    "notebook.diff.ignoreMetadata": true,
    "notebook.lineNumbers": "on",
    "notebook.consolidatedOutputButton": true,
    "notebook.output.scrolling": true,
    "notebook.showCellStatusBar": "visible",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "right",
    },
    "notebook.cellToolbarVisibility": "hover",
    "notebook.globalToolbar": true,
    "notebook.insertToolbarLocation": "both",
    "jupyter.enableExtendedPythonKernelCompletions": true,
    "jupyter.interactiveWindow.textEditor.executeSelection": true,

    // ============================================================================
    // PYTHON
    // ============================================================================
    "python.terminal.activateEnvironment": true,
    "python.languageServer": "Pylance",
    "python.analysis.languageServerMode": "full",
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.completeFunctionParens": true,
    "python.testing.pytestEnabled": true,
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "isort.args": ["--profile", "black"],
    "flake8.args": ["--config", "<path_to_your_flake8_config_file>"],

    // ============================================================================
    // GITHUB COPILOT / AI CHAT
    // ============================================================================
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.nextEditSuggestions.enabled": true,
    "chat.mcp.autostart": "newAndOutdated",
    "chat.mcp.gallery.enabled": true,
    "chat.mcp.discovery.enabled": {
        "claude-desktop": true,
        "windsurf": true,
        "cursor-global": true,
        "cursor-workspace": true,
    },
    "chat.todoListTool.enabled": true,
    "chat.viewSessions.orientation": "stacked",
    "chat.useAgentSkills": true,
    "chat.instructionsFilesLocations": {
        ".github/instructions": true,
    },

    // ============================================================================
    // GITLENS
    // ============================================================================
    "gitlens.ai.model": "vscode",
    "gitlens.ai.vscode.model": "copilot:gpt-4.1",
    "gitlens.launchpad.indicator.enabled": false,

    // ============================================================================
    // CODE RUNNER
    // ============================================================================
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "python":"$pythonPath $fullFileName",
    },

    // ============================================================================
    // PRETTIER
    // ============================================================================
    "prettier.tabWidth": 4,

    // ============================================================================
    // SHELL FORMAT
    // ============================================================================
    "shellformat.flag": "-i 4",
    "shellformat.path": "<path_to_your_shfmt_binary>",

    // ============================================================================
    // C/C++
    // ============================================================================
    "C_Cpp.clang_format_style": "{ BasedOnStyle: Google, BreakBeforeBraces: Attach, PointerAlignment: Left, IndentWidth: 4, ColumnLimit: 0 }",

    // ============================================================================
    // MAKEFILE
    // ============================================================================
    "makefile.configureOnOpen": true,

    // ============================================================================
    // LANGUAGE-SPECIFIC SETTINGS
    // ============================================================================
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "black-formatter.args": ["--line-length", ""],
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[json]": {
        "editor.tabSize": 4,
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.insertSpaces": true,
        "editor.autoIndent": "advanced",
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    "[shellscript]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4,
        "editor.detectIndentation": false,
        "editor.defaultFormatter": "mads-hartmann.bash-ide-vscode",
        "editor.formatOnSave": true,
        "files.eol": "\n",
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
    },
    "[go]": {
        "editor.insertSpaces": false,
    },
    "[makefile]": {
        "editor.insertSpaces": false,
    },

    // ============================================================================
    // COMMENTED OUT / OPTIONAL
    // ============================================================================
    // "indentRainbow.excludedLanguages": ["sh", "plaintext"]
    // "terminal.integrated.automationProfile.linux": {
    //     "path": "/bin/bash",
    //     "args": ["--login"]
    // }
}
